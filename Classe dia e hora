public class DiaEHora {

	boolean diaValido = false, horaValida = false;
	
		
	public int DiaValido(int dia) {
		
		while(diaValido!=true){
            
            if(1<=dia && dia<=30){
                System.out.println("Dia selecionado!");
                diaValido = true;
            }else{
                System.out.println("Dia inválido");
                diaValido = false;
            }
        } 
		return dia;
	}
	
	
	public int HoraValida(int hora) {
		
		while(horaValida!=true){
            
            if(hora>=1 && hora<=24){
                System.out.println("Hora selecionada!");
                horaValida = true;
            }else{
                System.out.println("Hora inválida, insira valores entre 1 e 24");
                horaValida = false;
            }
        } 
		return hora;
	}
	
}
